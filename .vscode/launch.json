    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch gulp browsersync",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "yarn: install",
            "runtimeExecutable": "gulp",
            "runtimeArgs": [
                "serve"
            ],
            "internalConsoleOptions": "neverOpen",
            "console": "externalTerminal"
        }
        /*
        {
            "name": "Launch gulp browsersync",
            "type": "node-terminal",
            "request": "launch",
            "command": "gulp serve",
            "cwd": "${workspaceFolder}"
        }
        */
    ]
}
