    "displayName": "Phasmo journal",
    "description": "A quick and dirty companion app for Phasmophobia.",
    "version": "1.0.0",
    "type": "module",
    "packageManager": "yarn@3.3.0",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "gulp-tasks": "gulp --tasks --depth 1",
        "build:ts": "tsc",
        "watch:ts": "tsc --watch",
        "build:sass": "sass src/scss:build/css",
        "watch:sass": "sass -w src/scss:build/css",
        "start-server": "start \"\" \"cmd.exe\" /k gulp serve",
        "open-terminal": "start cmd.exe",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@types/bootstrap": "^5.2.6",
